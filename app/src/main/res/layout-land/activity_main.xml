<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/basketball"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@android:color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="cursive"
                android:padding="20dp"
                android:text="Team A"
                android:textColor="@android:color/white"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="cursive"
                android:padding="20dp"
                android:textColor="@android:color/white"
                android:textSize="24dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/my_button"
                android:fontFamily="sans-serif"
                android:onClick="addThreeTeamA"
                android:text="+3 points"
                android:textAllCaps="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/my_button"
                android:fontFamily="sans-serif"
                android:onClick="addTwoTeamA"
                android:text="+2 points"
                android:textAllCaps="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/my_button"
                android:fontFamily="sans-serif"
                android:onClick="addOneTeamA"
                android:text="FREE THROW"
                android:textAllCaps="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@android:color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="cursive"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="Team B"
                android:textColor="@android:color/white"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="cursive"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:textColor="@android:color/white"
                android:textSize="24dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/my_button"
                android:fontFamily="sans-serif"
                android:onClick="addThreeTeamB"
                android:text="+3 points"
                android:textAllCaps="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/my_button"
                android:fontFamily="sans-serif"
                android:onClick="addTwoTeamB"
                android:text="+2 points"
                android:textAllCaps="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/my_button"
                android:fontFamily="sans-serif"
                android:onClick="addOneTeamB"
                android:text="FREE THROW"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/my_button"
            android:fontFamily="sans-serif"
            android:onClick="reset"
            android:text="reset"
            android:textAllCaps="true" />
    </LinearLayout>

</LinearLayout>
